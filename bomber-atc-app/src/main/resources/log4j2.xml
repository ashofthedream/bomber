<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%-5level [%-30t] %logger{1.}} - %msg%throwable{220}%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="ashes.of.bomber.atc" level="debug" />

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
